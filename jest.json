{
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/$1",
    "@app/(.*)$": "<rootDir>/src/$1",
    "@modules/(.*)$": "<rootDir>/src/modules/$1",
    "@lib/(.*)$": "<rootDir>/src/lib/$1"
  },
  "setupFiles": [
    "./test/setup/index"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "./",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "coverageReporters": [
    "json",
    "text",
    "clover",
    "cobertura"
  ],
  "reporters": [
    "default",
    "jest-junit"
  ]
}