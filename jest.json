{
  "moduleNameMapper": {
    "@app/(.*)$": "<rootDir>/$1",
    "@modules/(.*)$": "<rootDir>/modules/$1",
    "@lib/(.*)$": "<rootDir>/lib/$1"
  },
  "setupFiles": [
    "../test/setup/index"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "coverageReporters": [
    "json",
    "text",
    "clover",
    "cobertura"
  ],
  "reporters": [
    "default",
    "jest-junit"
  ]
}